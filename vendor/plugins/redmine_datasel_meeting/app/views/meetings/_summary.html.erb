<div class="issue">
	<div class="subject">
		<div><h3><%= meeting.subject %></h3></div>
	</div>
	<table class="attributes">
		<tbody>
			<tr>
				<th><%=l(:field_place)%></th><td><%= meeting.place %></td>
				<th><%=l(:field_date)%></th><td><%= format_time(meeting.date) %></td></tr>
			<tr>
				<th><%=l(:field_issue)%></th><td class="id"><%= link_to meeting.issue.id, :controller => 'issues', :action => 'show', :id => meeting.issue %></td>
				<th><%=l(:field_convacator)%></th><td><%= meeting.convacator.name %></td>
			</tr>
		</tbody>
	</table>
	<hr/>
	<p><strong><%=l(:field_internal_participants)%></strong></p>
	<div id="internalparticipants">
		<%= render :partial => 'internal_participants', :locals => {:meeting => meeting}%>
	</div>
	<hr/>
	<p><strong><%=l(:field_agenda)%></strong></p>
	<div class="wiki">
		<%= textilizable meeting, :agenda %>
	</div>
</div>
