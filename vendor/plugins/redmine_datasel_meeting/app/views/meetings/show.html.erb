	<td colspan='2'>
		<div class="wiki">
			<%= textilizable @meeting, :agenda %>
		</div>
	</td>
</tr>
<tr><th colspan='2'>Content</th></tr>
<tr>
	<td colspan='2'>
		<div class="wiki">
			<%= textilizable @meeting, :content %>
		</div>
	</td>
</tr>
</table>
