<div class="contextual">
<%= link_to_if_authorized(l(:button_update), {:controller => 'meetings', :action => 'edit', :meeting_id => @meeting.id, :id => @project }, :class => 'icon icon-edit', :accesskey => accesskey(:edit)) %>
</div>
<h2><%=l(:label_meeting_details)%></h2>
<%= render :partial => 'summary', :locals => {:meeting => @meeting} %>
<h3>Content</h3>
<div class="wiki">
<%= textilizable @meeting, :content %>
</div>
<h3>Decisions</h3>
<% decisionNo = 0 %>
<table>
<tr>
	<th>#</th>
	<th>Subject</th>
	<th>Assignee</th>
	<th>Status</th>
</tr>
<% for relation in @meeting.issue.relations_from do%>
<tr>
	<% decisionNo = decisionNo + 1 %>
	<td><%= decisionNo %></td>
	<td><%= link_to relation.issue_to.subject, :controller => 'issues', :action => 'show', :id => relation.issue_to %></td>
	<td><%= link_to_user relation.issue_to.assigned_to %></td>
	<td><%= relation.issue_to.status.name %></td>
<tr>
<% end %>
<% for relation in @meeting.issue.relations_to do%>
<tr>
	<% decisionNo = decisionNo + 1 %>
        <td><%= decisionNo %></td>
        <td><%= link_to relation.issue_from.subject, :controller => 'issues', :action => 'show', :id => relation.issue_from %></td>
        <td><%= link_to_user relation.issue_from.assigned_to %></td>
        <td><%= relation.issue_from.status.name %></td>
<tr>
<% end %>
</table>
<div class="contextual">
<%= link_to_if_authorized(l(:button_update), {:controller => 'meetings', :action => 'edit', :meeting_id => @meeting.id, :id => @project }, :class => 'icon icon-edit', :accesskey => accesskey(:edit)) %>
</div>
