<div class="contextual"><%= link_to_if_authorized 'New Meeting', { :controller => 'meetings', :action => 'new', :id => @project},:class => 'icon icon-add' %></div>
<h2><%=l(:label_list_of_meeting)%></h2>
<div class="autoscroll">
	<table class="list">
		<tbody>
			<tr>
				<th>#</th><th>Date</th><th>Subject</th><th>Convacator</th><th>Issue</th>
			</tr>
			<% @meetings.each do |meeting| %>
			<tr>
				<td class="id"><%= link_to meeting.id, { :action => 'show', :meeting_id => meeting, :id => @project} %></td>
				<td class="updated_on"><%= format_time(meeting.date) %></td>
				<td class="subject"><%= link_to meeting.subject, { :action => 'show', :meeting_id => meeting, :id => @project} %></td>
				<td class="assigned_to"><%= meeting.convacator.name %></td>
				<td class="id"><%= link_to meeting.issue.id, :controller => 'issues', :action => 'show', :id => meeting.issue %></td>
			</tr>
			<% end %>
		</tbody>			
	</table>
</div>
