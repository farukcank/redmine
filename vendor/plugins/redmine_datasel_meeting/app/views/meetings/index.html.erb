<div class="contextual"><%= link_to_if_authorized 'New Meeting', { :controller => 'meetings', :action => 'new', :id => @project},:class => 'icon icon-add' %></div>
<h2><%=l(:label_list_of_meeting)%></h2>
<div class="autoscroll">
	<table class="list">
		<tbody>
			<tr>
				<th>#</th><th><%=l(:field_date)%></th><th><%=l(:field_subject)%></th><th><%=l(:field_status)%><th><%=l(:field_convacator)%></th><th><%=l(:field_issue)%></th>
			</tr>
			<% 
                        currentIndex = 0
                        @meetings.each do |meeting| 
                        currentIndex = currentIndex + 1
                        oddEven = currentIndex % 2 == 0 ? 'even' : 'odd'
                        %>
			<tr>
				<td class="id <%= oddEven %>"><%= link_to meeting.id, { :action => 'show', :meeting_id => meeting, :id => @project} %></td>
				<td class="updated_on <%= oddEven %>"><%= format_time(meeting.date) %></td>
				<td class="subject <%= oddEven %>"><%= link_to meeting.subject, { :action => 'show', :meeting_id => meeting, :id => @project} %></td>
				<td class="status <%= oddEven %>"><%= meeting.status.name %></td>
				<td class="assigned_to <%= oddEven %>"><%= meeting.convacator.name %></td>
				<td class="id <%= oddEven %>"><%= link_to meeting.issue.id, :controller => 'issues', :action => 'show', :id => meeting.issue %></td>
			</tr>
			<% end %>
		</tbody>			
	</table>
</div>
